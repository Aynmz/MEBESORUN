+git clone --mirror "$REPO_SSH" repo-mirror
+cd repo-mirror
+
+# replacements.txt'in üst dizinde olduğundan emin olun
+if [ ! -f ../replacements.txt ]; then
+  echo "replacements.txt bulunamadı. Lütfen replacements.txt dosyasını bir üst dizine koyun."
+  exit 1
+fi
+
+# git-filter-repo çalıştırma (filter-repo kurulu olmalı)
+git filter-repo --replace-text ../replacements.txt
+
+# Temizlik ve push
+git reflog expire --expire=now --all
+git gc --prune=now --aggressive
+git push --force --all
+git push --force --tags
+
